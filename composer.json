{
    "name": "dynamic/silverstripe-tasks",
    "description": "Task management system for SilverStripe with assignment, threading, and status tracking",
    "type": "silverstripe-vendormodule",
    "license": "BSD-3-Clause",
    "keywords": [
        "silverstripe",
        "tasks",
        "tickets",
        "workflow",
        "CMS"
    ],
    "authors": [
        {
            "name": "Dynamic",
            "email": "dev@dynamicagency.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "silverstripe/framework": "^6.0",
        "silverstripe/admin": "^3.0"
    },
    "require-dev": {
        "cambis/silverstan": "^2.1",
        "silverstripe/recipe-testing": "^4",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Dynamic\\Tasks\\": "src/",
            "Dynamic\\Tasks\\Tests\\": "tests/php/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        },
        "process-timeout": 600
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
